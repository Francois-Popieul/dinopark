<%- include("../partials/head", { title: ticket.ticket_type }) %>

<main class="page">
  <div class="ticket-page-container">
    <h1 class="ticket-page-name">
      <%= ticket.icon %><br>
      <%= ticket.ticket_type %>
    </h1>
    <p class="ticket-page-description">
      <%= ticket.audience %>
    </p>
    <p class="ticket-page-description">
      <%= ticket.details %>
    </p>
    <p class="ticket-page-description">
      <%= ticket.ticket_price %> €
    </p>
    <p class="ticket-page-attraction-list">Ce billet donne accès aux attractions suivantes :</p>
    <div class="card-container">
      <% attractions.forEach((attraction)=> { %>
      <a href="../attractions/<%= attraction.id_attraction %>">
        <div class="attraction-card">
          <p class="attraction-card-name">
            <%= attraction.attraction_name %>
          </p>
          <div class="attraction-card-image"><img src="<%= attraction.attraction_illustration_path %>" alt="Image d'illustration de <%= attraction.attraction_name %>"></div>
          <p class="attraction-card-description">
            <%= attraction.attraction_description %>
          </p>
        </div>
      </a>
      <% }); %>
    </div>
    <div class="ticket-page-button-container">
      <a href="/booking"><button type="button" class="blue-button">Réserver votre aventure</button></a>
    </div>
  </div>
</main>
<%- include("../partials/footer") %>